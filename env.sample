# ðŸš Drone Tracker Configuration Sample
# Copy this file to .env and update with your actual values

# =============================================================================
# WiFi Configuration
# =============================================================================
WIFI_SSID=your_wifi_network_name
WIFI_PASSWORD=your_wifi_password

# =============================================================================
# ESP32 Hardware Configuration
# =============================================================================
ESP32_IP=10.0.0.70
ESP32_TIMEOUT=0.5

# =============================================================================
# Camera Configuration
# =============================================================================
CAMERA_INDEX=0          # 0 for default camera, 1 for second camera, etc.
CAMERA_WIDTH=1280       # Camera resolution width
CAMERA_HEIGHT=720       # Camera resolution height

# =============================================================================
# Servo Configuration (degrees)
# =============================================================================
PAN_HOME=102           # Pan servo home position (90 = center, >90 = right)
TILT_HOME=90           # Tilt servo home position (90 = center, <90 = up)
CENTER_ANGLE=90        # Mechanical center position for servos

# =============================================================================
# AI Detection Configuration
# =============================================================================
CONFIDENCE_THRESHOLD=0.05    # Lower = more sensitive detection (0.01-1.0)
IOU_THRESHOLD=0.2           # Intersection over Union threshold (0.1-0.9)
MAX_DETECTIONS=200          # Maximum objects to detect per frame

# =============================================================================
# Camera Field of View (degrees)
# =============================================================================
CAMERA_FOV_HORIZONTAL=60    # Horizontal field of view of your camera
CAMERA_FOV_VERTICAL=45      # Vertical field of view of your camera

# =============================================================================
# Movement Configuration (degrees per keypress)
# =============================================================================
MANUAL_STEP_SIZE=5          # Fine movement step (WASD keys)
MANUAL_STEP_SIZE_SHIFT=15   # Coarse movement step (Arrow keys)

# =============================================================================
# UI/Display Configuration (Optional - defaults work well)
# =============================================================================
MAIN_WINDOW_WIDTH=1280
MAIN_WINDOW_HEIGHT=720
MAIN_WINDOW_POS_X=50
MAIN_WINDOW_POS_Y=50
INFO_PANEL_WIDTH=600
INFO_PANEL_HEIGHT=400
INFO_PANEL_POS_X=1350
INFO_PANEL_POS_Y=50

# =============================================================================
# Digital Zoom Configuration
# =============================================================================
DEFAULT_ZOOM_FACTOR=1.0
MAX_ZOOM_FACTOR=5.0
ZOOM_STEP=1.2

# =============================================================================
# Crosshair Offset Configuration
# =============================================================================
CROSSHAIR_OFFSET_X=10.0      # degrees right from center
CROSSHAIR_OFFSET_Y=2.0       # degrees down from center

# =============================================================================
# Detection/Tracking Configuration
# =============================================================================
MOVEMENT_THRESHOLD=15        # pixels to consider "significant movement"
MAX_TRACKING_HISTORY=5       # number of positions to track for movement
DEBUG_FRAME_INTERVAL=60      # print debug info every N frames

# =============================================================================
# Logging Configuration
# =============================================================================
MAX_LOG_MESSAGES=8          # maximum log messages to display
LOG_MESSAGE_MAX_LENGTH=70   # truncate messages longer than this

# =============================================================================
# Network Configuration
# =============================================================================
HTTP_TIMEOUT=1.0            # HTTP request timeout in seconds
HTTP_RETRIES=1              # number of HTTP retries
COMMAND_RATE_LIMIT=0.1      # seconds between servo commands
